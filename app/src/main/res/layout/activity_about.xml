<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/HomeActivityTopHeadlines"
    tools:context=".AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarAboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0F131D"
        app:title="About Us"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:titleMarginStart="35dp"
        app:titleTextColor="@color/grey"
        app:logo="@drawable/ic_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="?attr/HomeActivityTopHeadlines"
        android:layout_below="@id/toolBarAboutUs">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="?attr/HomeActivityTopHeadlines">

            <ImageView
                android:id="@+id/logoAboutUs"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_smart_news_icon_2_playstore"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/appNameAboutUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:fontFamily="@font/roboto_bold"
                android:textColor="?attr/HomeActivityBackgroundText"
                android:textSize="30sp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/logoAboutUs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/aboutUsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart News is an Excellent News App that lets you know what is happening in different countries around the world at your comfort zone."
                android:textColor="?attr/HomeActivityBackgroundText"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/appNameAboutUs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/developerContactAboutUs1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed by Z-Tech™"
                android:textColor="?attr/HomeActivityBackgroundText"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/aboutUsText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:id="@+id/developerContactAboutUs2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2022. All Rights Reserved."
                android:textColor="?attr/HomeActivityBackgroundText"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/developerContactAboutUs1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/developerContactAboutUs3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Zeus: 08102249778 or 09055729837"
                android:textColor="?attr/HomeActivityBackgroundText"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/developerContactAboutUs2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/developerContactAboutUs4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Email: ztech890@gmail.com"
                android:textColor="?attr/HomeActivityBackgroundText"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/developerContactAboutUs3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</RelativeLayout>