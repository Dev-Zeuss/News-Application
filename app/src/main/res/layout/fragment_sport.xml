<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/HomeActivityBackground"
    tools:context=".fragments.SportFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sportsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_margin="2dp"
        android:padding="2dp" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sportsHomeScreenShimmerLayout"
        app:shimmer_repeat_mode="reverse"
        app:shimmer_shape="radial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:animationCache="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />
            <include layout="@layout/shimmer_category_items_layout" />

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

</RelativeLayout>