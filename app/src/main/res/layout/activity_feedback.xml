<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/HomeActivityBackground"
    tools:context=".FeedbackActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBarFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            app:title="FeedBack"
            app:titleMarginStart="50dp"
            app:titleTextColor="@color/grey"
            app:logo="@drawable/ic_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/myEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="?attr/HomeActivityBackgroundText"
            android:textSize="20sp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:enabled="false"
            android:text="ztech890@gmail.com"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolBarFeedback"/>

        <EditText
            android:id="@+id/emailSubject"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="?attr/HomeActivityBackgroundText"
            android:textSize="20sp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:maxLines="1"
            android:fontFamily="@font/roboto_medium"
            android:singleLine="true"
            android:hint="Subject"
            android:textColorHint="@color/ash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myEmail"/>

        <EditText
            android:id="@+id/emailMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/HomeActivityBackgroundText"
            android:textSize="20sp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Message"
            android:fontFamily="@font/roboto_medium"
            android:textColorHint="@color/ash"
            android:minHeight="100dp"
            android:maxLines="5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailSubject"/>

        <Button
            android:id="@+id/sendFeedbackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:padding="10dp"
            android:textSize="15sp"
            android:backgroundTint="?attr/HomeActivityBackgroundText"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textColor="?attr/HomeActivityBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailMessage"/>

</androidx.constraintlayout.widget.ConstraintLayout>