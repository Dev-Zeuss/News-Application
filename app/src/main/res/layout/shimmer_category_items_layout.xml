<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/categoryNewsImage"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:background="@color/ash"/>

            <TextView
                android:id="@+id/categoryNewsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="?attr/HomeActivityBackgroundText"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="15dp"
                android:singleLine="true"
                android:background="@color/ash"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:ellipsize="marquee"
                android:layout_toEndOf="@id/categoryNewsImage"/>

            <TextView
                android:id="@+id/categoryNewsAuthor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="?attr/HomeActivityBackgroundText"
                android:layout_marginTop="15dp"
                android:layout_below="@id/categoryNewsTitle"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="15dp"
                android:singleLine="true"
                android:background="@color/ash"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:ellipsize="marquee"
                android:layout_toEndOf="@id/categoryNewsImage"/>

            <TextView
                android:id="@+id/categoryNewsDate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="15sp"
                android:layout_alignParentEnd="true"
                android:background="@color/ash"
                android:textColor="?attr/HomeActivityBackgroundText"
                android:layout_below="@id/categoryNewsTitle"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto_regular" />

        </RelativeLayout>

</RelativeLayout>