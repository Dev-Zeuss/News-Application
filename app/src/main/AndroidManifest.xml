<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zeus.smartnews">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_smart_news_icon_2"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:resizeableActivity="false"
        android:roundIcon="@mipmap/ic_smart_news_icon_2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartNews"
        android:usesCleartextTraffic="false">
        <activity android:name=".DeveloperInfoActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/Theme.homeActivityLightMode" />
        <activity android:name=".FeedbackActivity"
            android:hardwareAccelerated="true"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.homeActivityLightMode" />
        <activity android:name=".PrivacyPolicyActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/Theme.homeActivityLightMode" />
        <activity
            android:name=".HelpActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/Theme.homeActivityLightMode" />
        <activity
            android:name=".AboutActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/Theme.homeActivityLightMode" />
        <activity
            android:name=".SettingsActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/Theme.homeActivityLightMode" />
        <activity
            android:name=".SpeechActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/Theme.homeActivityLightMode" />
        <activity
            android:name=".WebPageActivity"
            android:hardwareAccelerated="true"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.homeActivityLightMode" />
        <activity
            android:name=".HomeActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:exported="false"
            android:theme="@style/Theme.homeActivityLightMode" />
        <activity
            android:name=".MainActivity"
            android:hardwareAccelerated="true"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreenActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.SmartNews">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>